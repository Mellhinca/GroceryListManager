<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.qc.seclass.glm">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GLM">
        <activity android:name=".activities.EditListItemActivity" />
        <activity
            android:name=".activities.ListItemsActivity"
            android:parentActivityName=".activities.MainActivity" />
        <activity android:name=".activities.SeacrhItemTypeActivity" android:windowSoftInputMode="adjustPan"
           />
        <activity android:name=".activities.SearchResultNotFoundActivity"/>
        <activity android:name=".activities.SearchResultFoundActivity"/>
        <activity android:name=".activities.AddItemActivity" />
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>